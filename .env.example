# Starbot_API Environment Configuration
# Copy this file to .env and fill in your credentials

# ===== Server Configuration =====
PORT=3737
HOST=127.0.0.1
NODE_ENV=development
LOG_LEVEL=info
DATABASE_URL=file:./prisma/dev.db

# Optional API protection flags (off by default)
AUTH_ENFORCEMENT_ENABLED=false
RATE_LIMITING_ENABLED=false
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_RUN_PER_WINDOW=8
RATE_LIMIT_INFERENCE_PER_WINDOW=30

# ===== Kimi/Moonshot =====
# Sign up at: https://platform.moonshot.cn/
MOONSHOT_API_KEY=your_moonshot_api_key_here
MOONSHOT_BASE_URL=https://api.moonshot.cn

# ===== Google Vertex AI =====
# Setup: https://cloud.google.com/vertex-ai/docs/start/quickstarts
VERTEX_PROJECT_ID=your_gcp_project_id
VERTEX_LOCATION=us-central1
VERTEX_ALLOWED_MODELS=gemini-2.5-flash-lite,gemini-2.5-flash,gemini-2.5-pro,gemini-3-flash-preview
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# ===== Azure AI Services (OpenAI) =====
# Setup: https://portal.azure.com/
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your_azure_openai_key
# Comma-separated list of deployed model names
AZURE_OPENAI_MODELS=gpt-5.2,gpt-5.2-codex,gpt-5-mini
AZURE_ALLOWED_DEPLOYMENTS=gpt-5.2-chat,gpt-4.1

# ===== AWS Bedrock =====
# Setup: https://console.aws.amazon.com/bedrock/
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
BEDROCK_REGION=us-east-1

# ===== Cloudflare Workers AI =====
# Setup: https://dash.cloudflare.com/
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# ===== Features =====
# Enable LLM-based triage (uses cheapest model to improve routing)
TRIAGE_MODEL_ENABLED=false

# Enable tool execution (file.read, file.dir, web.search, etc.)
TOOLS_ENABLED=true

# Enable web search (requires API key)
WEB_SEARCH_ENABLED=false
WEB_SEARCH_API_KEY=your_search_api_key
BRAVE_SEARCH_API_KEY=your_brave_search_api_key

# ===== Quick Start =====
# Minimum configuration to get started (Kimi only):
# 1. Copy this file to .env
# 2. Add your MOONSHOT_API_KEY
# 3. Run: pnpm dev
# 4. Test: ./test-api.sh
